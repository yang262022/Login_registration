<configuration>

    <!-- Define appender first -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define root logger and associate appender -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
